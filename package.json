{
  "name": "trailblazer",
  "version": "0.0.0",
  "description": "A pragmatic implementation of TrailsJS for rapid development",
  "main": "index.js",
  "scripts": {
    "lint": "node node_modules/eslint/bin/eslint ./",
    "start": "node node_modules/nodemon/bin/nodemon -e js -x 'npm run lint && npm run serve || exit 1'",
    "serve": "node node_modules/babel-cli/bin/babel-node --ignore node_modules server.js",
    "build": "node node_modules/babel-cli/bin/babel --ignore node_modules ./ -d dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamrizzi/trailblazer.git"
  },
  "keywords": [
    "trails",
    "trailsjs",
    "node",
    "nodejs",
    "express",
    "server",
    "api",
    "rest"
  ],
  "author": "Jam Risser <jam@jamrizzi.com> (https://jam.jamrizzi.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jamrizzi/trailblazer/issues"
  },
  "homepage": "https://github.com/jamrizzi/trailblazer",
  "dependencies": {
    "body-parser": "^1.18.2",
    "date-fns": "^1.29.0",
    "ejs": "^2.5.7",
    "express": "^4.16.2",
    "express-custom-response": "^0.1.1",
    "lodash": "^4.17.5",
    "trailpack-express": "git+https://github.com/trailsjs/trailpack-express#v3",
    "trailpack-repl": "^3.0.2",
    "trailpack-router": "^3.1.4",
    "trails": "^3.0.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.24.1",
    "eslint": "^4.17.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "nodemon": "^1.15.1"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "stage-2"
    ]
  },
  "eslintIgnore": [
    "dist"
  ]
}
